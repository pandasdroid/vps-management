<Window x:Class="VPSManager.Views.ServerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Server Details"
        MinWidth="380" MaxWidth="480"
        MinHeight="300" MaxHeight="600"
        SizeToContent="WidthAndHeight"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterOwner"
        Background="#202123"
        ShowInTaskbar="False">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#ECECF1"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#3E3E42" BorderThickness="1">
        <DockPanel>
            <!-- Header -->
            <Border DockPanel.Dock="Top" Background="#18181B" Padding="16,12">
                <TextBlock x:Name="HeaderText" Text="Add New Server"
                           FontSize="15" FontWeight="SemiBold" Foreground="#ECECF1"/>
            </Border>

            <!-- Buttons at bottom -->
            <Border DockPanel.Dock="Bottom" Background="#18181B" Padding="16,10"
                    BorderBrush="#3E3E42" BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="DeleteButton" Style="{StaticResource DangerButton}"
                            Content="Delete" Visibility="Collapsed" Click="Delete_Click" Padding="10,6"/>

                    <Button Grid.Column="2" Style="{StaticResource SecondaryButton}"
                            Content="Test" Margin="0,0,6,0" Click="TestConnection_Click" Padding="10,6"/>

                    <Button Grid.Column="3" Style="{StaticResource PrimaryButton}"
                            Content="Save" Click="Save_Click" Padding="14,6"/>
                </Grid>
            </Border>

            <!-- Scrollable Form -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="16,12">
                    <!-- Server Name -->
                    <Label Content="Server Name (optional)"/>
                    <TextBox x:Name="NameBox" Style="{StaticResource DarkTextBox}" Margin="0,0,0,10"/>

                    <!-- Host & Port -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,6,0">
                            <Label Content="Host / IP Address *"/>
                            <TextBox x:Name="HostBox" Style="{StaticResource DarkTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="6,0,0,0">
                            <Label Content="Port"/>
                            <TextBox x:Name="PortBox" Style="{StaticResource DarkTextBox}" Text="22"/>
                        </StackPanel>
                    </Grid>

                    <!-- Username -->
                    <Label Content="Username *"/>
                    <TextBox x:Name="UsernameBox" Style="{StaticResource DarkTextBox}" Text="root" Margin="0,0,0,10"/>

                    <!-- Auth Type -->
                    <Label Content="Authentication"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <RadioButton x:Name="PasswordAuth" Content="Password" IsChecked="True"
                                     GroupName="Auth" Foreground="#ECECF1" Margin="0,0,16,0"
                                     Checked="AuthType_Changed"/>
                        <RadioButton x:Name="KeyAuth" Content="SSH Key"
                                     GroupName="Auth" Foreground="#ECECF1"
                                     Checked="AuthType_Changed"/>
                    </StackPanel>

                    <!-- Password -->
                    <StackPanel x:Name="PasswordPanel">
                        <Label Content="Password *"/>
                        <PasswordBox x:Name="PasswordBox" Style="{StaticResource DarkPasswordBox}" Margin="0,0,0,10"/>
                    </StackPanel>

                    <!-- SSH Key -->
                    <StackPanel x:Name="KeyPanel" Visibility="Collapsed">
                        <Label Content="Private Key *"/>
                        <TextBox x:Name="KeyBox" Style="{StaticResource DarkTextBox}"
                                 Height="80" TextWrapping="Wrap"
                                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                                 FontFamily="Consolas" FontSize="11" Margin="0,0,0,10"/>

                        <Label Content="Passphrase (if encrypted)"/>
                        <PasswordBox x:Name="PassphraseBox" Style="{StaticResource DarkPasswordBox}" Margin="0,0,0,10"/>
                    </StackPanel>

                    <!-- Test Result -->
                    <Border x:Name="TestResultBorder" Visibility="Collapsed"
                            CornerRadius="4" Padding="10" Margin="0,0,0,6">
                        <TextBlock x:Name="TestResultText" TextWrapping="Wrap" FontSize="12"/>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Border>
</Window>
