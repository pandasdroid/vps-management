<Window x:Class="VPSManager.Views.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About CloudDeck"
        Height="480" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BgDarkBrush}"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border Background="{StaticResource BgCardBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="{StaticResource BgDarkBrush}" CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Margin="16,12">
                    <TextBlock Text="About CloudDeck"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontSize="14" FontWeight="SemiBold"/>
                    <Button Content="&#xE711;"
                            FontFamily="Segoe MDL2 Assets"
                            HorizontalAlignment="Right"
                            Style="{StaticResource IconButton}"
                            Click="Close_Click"/>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="24,20">

                    <!-- App Logo/Icon -->
                    <Border Background="{StaticResource PrimaryBrush}"
                            Width="80" Height="80" CornerRadius="16"
                            HorizontalAlignment="Center" Margin="0,0,0,16">
                        <TextBlock Text="&#xE753;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="40"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- App Name -->
                    <TextBlock Text="CloudDeck"
                               FontSize="28" FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"/>

                    <!-- Version -->
                    <TextBlock x:Name="VersionText"
                               Text="Version 1.0.0"
                               FontSize="13"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>

                    <!-- Tagline -->
                    <TextBlock Text="Professional VPS Server Management"
                               FontSize="13"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,24"/>

                    <!-- Divider -->
                    <Border Height="1" Background="{StaticResource BorderBrush}" Margin="0,0,0,20"/>

                    <!-- Company Info -->
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Developed by"
                                   FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"/>

                        <TextBlock Text="Pandasdroid Pvt Ltd"
                                   FontSize="16" FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,4,0,16"/>
                    </StackPanel>

                    <!-- Features List -->
                    <Border Background="{StaticResource BgInputBrush}"
                            CornerRadius="8" Padding="16" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Features"
                                       FontSize="12" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets"
                                           Foreground="{StaticResource SuccessBrush}" FontSize="12" Margin="0,0,8,0"/>
                                <TextBlock Text="SSH Terminal with copy/paste support"
                                           Foreground="{StaticResource TextPrimaryBrush}" FontSize="12"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets"
                                           Foreground="{StaticResource SuccessBrush}" FontSize="12" Margin="0,0,8,0"/>
                                <TextBlock Text="SFTP File Manager with icons"
                                           Foreground="{StaticResource TextPrimaryBrush}" FontSize="12"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets"
                                           Foreground="{StaticResource SuccessBrush}" FontSize="12" Margin="0,0,8,0"/>
                                <TextBlock Text="VS Code Integration (code-server)"
                                           Foreground="{StaticResource TextPrimaryBrush}" FontSize="12"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets"
                                           Foreground="{StaticResource SuccessBrush}" FontSize="12" Margin="0,0,8,0"/>
                                <TextBlock Text="Real-time Server Statistics"
                                           Foreground="{StaticResource TextPrimaryBrush}" FontSize="12"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets"
                                           Foreground="{StaticResource SuccessBrush}" FontSize="12" Margin="0,0,8,0"/>
                                <TextBlock Text="Private Key Authentication"
                                           Foreground="{StaticResource TextPrimaryBrush}" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Copyright -->
                    <TextBlock x:Name="CopyrightText"
                               Text="Â© 2024 Pandasdroid Pvt Ltd. All rights reserved."
                               FontSize="11"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>

                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" Background="{StaticResource BgDarkBrush}"
                    CornerRadius="0,0,12,12" Padding="16,12">
                <Button Content="Close"
                        Style="{StaticResource PrimaryButton}"
                        HorizontalAlignment="Center"
                        Width="120"
                        Click="Close_Click"/>
            </Border>
        </Grid>
    </Border>
</Window>
