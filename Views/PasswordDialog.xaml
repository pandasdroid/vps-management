<Window x:Class="VPSManager.Views.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Authentication Required"
        Width="380" SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#202123"
        ShowInTaskbar="False">

    <Border BorderBrush="#3E3E42" BorderThickness="1">
        <StackPanel>
            <!-- Header -->
            <Border Background="#18181B" Padding="16,12">
                <StackPanel Orientation="Horizontal">
                    <Border Width="32" Height="32" Background="#3B82F620" CornerRadius="6" Margin="0,0,10,0">
                        <TextBlock Text="&#xE8D7;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                   Foreground="#3B82F6" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock x:Name="TitleText" Text="Enter Password"
                                   FontSize="14" FontWeight="SemiBold" Foreground="#ECECF1"/>
                        <TextBlock x:Name="ActionText" Text="This action requires authentication"
                                   FontSize="11" Foreground="#8E8EA0" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Form -->
            <StackPanel Margin="16,16,16,12">
                <TextBlock Text="Password" Foreground="#ECECF1" FontWeight="Medium" FontSize="12" Margin="0,0,0,4"/>
                <PasswordBox x:Name="PasswordBox" Style="{StaticResource DarkPasswordBox}"/>

                <TextBlock x:Name="ErrorText" Foreground="#EF4444" FontSize="11"
                           Margin="0,8,0,0" TextWrapping="Wrap" Visibility="Collapsed"/>
            </StackPanel>

            <!-- Buttons -->
            <Border Background="#18181B" Padding="16,12" BorderBrush="#3E3E42" BorderThickness="0,1,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource SecondaryButton}" Content="Cancel"
                            Click="Cancel_Click" Padding="14,6" Margin="0,0,8,0"/>
                    <Button Style="{StaticResource PrimaryButton}" Content="Confirm"
                            Click="Confirm_Click" Padding="14,6"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</Window>
