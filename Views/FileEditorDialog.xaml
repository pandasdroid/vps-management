<Window x:Class="VPSManager.Views.FileEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Editor"
        Width="800" Height="600"
        MinWidth="500" MinHeight="400"
        WindowStartupLocation="CenterOwner"
        Background="#1A1A1C"
        ShowInTaskbar="False">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#18181B" Padding="12,10" BorderBrush="#3E3E42" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock x:Name="FileNameText" Text="filename.txt" FontSize="14" FontWeight="SemiBold"
                               Foreground="#ECECF1" TextTrimming="CharacterEllipsis"/>
                    <TextBlock x:Name="FilePathText" Text="/path/to/file" FontSize="11"
                               Foreground="#8E8EA0" TextTrimming="CharacterEllipsis" Margin="0,2,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="StatusText" Text="" Foreground="#22C55E" FontSize="11"
                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock x:Name="EncodingText" Text="UTF-8" Foreground="#8E8EA0" FontSize="11"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Editor -->
        <Border Grid.Row="1" Background="#0D0D0D" Margin="0">
            <TextBox x:Name="EditorBox"
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     TextWrapping="NoWrap"
                     FontFamily="Consolas, Courier New"
                     FontSize="13"
                     Background="Transparent"
                     Foreground="#ECECF1"
                     CaretBrush="#ECECF1"
                     BorderThickness="0"
                     Padding="12"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     TextChanged="EditorBox_TextChanged"/>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#18181B" Padding="12,10" BorderBrush="#3E3E42" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="LineColText" Text="Ln 1, Col 1" Foreground="#8E8EA0" FontSize="11"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="SaveButton" Style="{StaticResource PrimaryButton}"
                            Content="Save" Click="Save_Click" Padding="16,6" Margin="0,0,8,0"/>
                    <Button Style="{StaticResource SecondaryButton}"
                            Content="Close" Click="Close_Click" Padding="16,6"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
