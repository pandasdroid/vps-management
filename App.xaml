                                    Padding="{TemplateBinding Padding}"
                                    Effect="{TemplateBinding Effect}"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
