<Window x:Class="VPSManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:VPSManager.ViewModels"
        xmlns:converters="clr-namespace:VPSManager.Converters"
        xmlns:controls="clr-namespace:VPSManager.Controls"
        Title="CloudDeck - VPS Server Management"
        Height="700" Width="1100"
        MinHeight="500" MinWidth="800"
        Background="{StaticResource BgDarkBrush}"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <converters:BytesToStringConverter x:Key="BytesToString"/>
        <converters:StatusToColorConverter x:Key="StatusToColor"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibility"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="#18181B" Foreground="{StaticResource TextPrimaryBrush}" Padding="4,2">
            <Menu.Resources>
                <!-- Popup/Dropdown background -->
                <SolidColorBrush x:Key="{x:Static SystemColors.MenuBrushKey}" Color="#27272A"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.MenuBarBrushKey}" Color="#18181B"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.MenuTextBrushKey}" Color="#FAFAFA"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.MenuHighlightBrushKey}" Color="#3F3F46"/>

                <!-- Separator Style -->
                <Style TargetType="Separator">
                    <Setter Property="Background" Value="#3F3F46"/>
                    <Setter Property="Margin" Value="4,2"/>
                    <Setter Property="Height" Value="1"/>
                </Style>

                <!-- MenuItem Style -->
                <Style TargetType="MenuItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                    <Setter Property="Padding" Value="8,6"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="MenuItem">
                                <Border x:Name="Border" Background="{TemplateBinding Background}"
                                        BorderThickness="0" Padding="{TemplateBinding Padding}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" SharedSizeGroup="Icon"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto" SharedSizeGroup="Shortcut"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <ContentPresenter x:Name="Icon" Grid.Column="0"
                                                          ContentSource="Icon"
                                                          VerticalAlignment="Center"
                                                          Margin="0,0,8,0"/>

                                        <ContentPresenter Grid.Column="1"
                                                          ContentSource="Header"
                                                          RecognizesAccessKey="True"
                                                          VerticalAlignment="Center"/>

                                        <TextBlock x:Name="InputGestureText" Grid.Column="2"
                                                   Text="{TemplateBinding InputGestureText}"
                                                   Foreground="#71717A" FontSize="11"
                                                   Margin="20,0,0,0" VerticalAlignment="Center"/>

                                        <Path x:Name="SubMenuArrow" Grid.Column="3"
                                              Data="M0,0 L4,4 L0,8 Z" Fill="#71717A"
                                              VerticalAlignment="Center" Margin="8,0,0,0"
                                              Visibility="Collapsed"/>

                                        <Popup x:Name="PART_Popup" IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                               Placement="Bottom" AllowsTransparency="True" Focusable="False"
                                               PopupAnimation="Fade">
                                            <Border Background="#27272A" BorderBrush="#3F3F46" BorderThickness="1"
                                                    CornerRadius="6" Padding="4" Margin="0,0,8,8">
                                                <Border.Effect>
                                                    <DropShadowEffect ShadowDepth="2" Opacity="0.3" BlurRadius="8"/>
                                                </Border.Effect>
                                                <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                                            </Border>
                                        </Popup>
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="Role" Value="TopLevelHeader">
                                        <Setter TargetName="SubMenuArrow" Property="Visibility" Value="Collapsed"/>
                                    </Trigger>
                                    <Trigger Property="Role" Value="SubmenuHeader">
                                        <Setter TargetName="SubMenuArrow" Property="Visibility" Value="Visible"/>
                                        <Setter TargetName="PART_Popup" Property="Placement" Value="Right"/>
                                    </Trigger>
                                    <Trigger Property="IsHighlighted" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#3F3F46"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Foreground" Value="#52525B"/>
                                    </Trigger>
                                    <Trigger Property="Icon" Value="{x:Null}">
                                        <Setter TargetName="Icon" Property="Visibility" Value="Collapsed"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Menu.Resources>

            <!-- File Menu -->
            <MenuItem Header="_File">
                <MenuItem Header="_Add Server" Command="{Binding AddServerCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Import Servers" Click="ImportServers_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE8B5;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Export Servers" Click="ExportServers_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xEDE1;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click" InputGestureText="Alt+F4">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE7E8;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <!-- Server Menu -->
            <MenuItem Header="_Server">
                <MenuItem Header="_Connect" Command="{Binding ConnectCommand}"
                          IsEnabled="{Binding SelectedServer, Converter={StaticResource NullToVisibility}}">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE703;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="{StaticResource SuccessBrush}"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Disconnect" Command="{Binding DisconnectCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="{StaticResource DangerBrush}"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Edit Server" Command="{Binding EditServerCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Delete Server" Command="{Binding DeleteServerCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="{StaticResource DangerBrush}"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Open _VS Code" Command="{Binding OpenVSCodeCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE943;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="{StaticResource PrimaryBrush}"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <!-- View Menu -->
            <MenuItem Header="_View">
                <MenuItem Header="_Refresh Files" Command="{Binding RefreshFilesCommand}" InputGestureText="F5">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Refresh _Stats" Command="{Binding RefreshStatsCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Terminal" IsCheckable="True" IsChecked="True"/>
                <MenuItem Header="_File Manager" IsCheckable="True" IsChecked="True"/>
                <MenuItem Header="_Statistics" IsCheckable="True" IsChecked="True"/>
            </MenuItem>

            <!-- Tools Menu -->
            <MenuItem Header="_Tools">
                <MenuItem Header="_Clear Terminal" Click="ClearTerminal_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE894;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Reconnect SSH" Command="{Binding ConnectCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Settings" Click="Settings_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <!-- Help Menu -->
            <MenuItem Header="_Help">
                <MenuItem Header="_Documentation" Click="Documentation_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE736;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Keyboard Shortcuts" Click="Shortcuts_Click" InputGestureText="Ctrl+?">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE765;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Check for _Updates" Click="CheckUpdates_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE777;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_About CloudDeck" Click="About_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE946;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <!-- Main Content Grid -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" MinWidth="200" MaxWidth="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0" Background="#18181B" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
            <DockPanel>
                <!-- Header -->
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="16,16,16,8">
                    <Border Width="32" Height="32" Background="{StaticResource PrimaryBrush}" CornerRadius="6">
                        <TextBlock Text="&#xE753;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                   Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="CloudDeck" FontSize="16" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Add Server Button -->
                <Button DockPanel.Dock="Top" Style="{StaticResource PrimaryButton}"
                        Command="{Binding AddServerCommand}" Margin="12,8,12,12">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="11" VerticalAlignment="Center"/>
                        <TextBlock Text="Add Server" Margin="6,0,0,0" FontSize="13"/>
                    </StackPanel>
                </Button>

                <!-- Status Bar -->
                <Border DockPanel.Dock="Bottom" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0" Padding="12,10">
                    <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="11" TextTrimming="CharacterEllipsis"/>
                </Border>

                <!-- Server List -->
                <DockPanel Margin="8,0,8,8">
                    <TextBlock DockPanel.Dock="Top" Text="SERVERS" FontSize="10"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="8,4,0,6" FontWeight="SemiBold"/>

                    <ListBox ItemsSource="{Binding Servers}"
                             SelectedItem="{Binding SelectedServer}"
                             Background="Transparent" BorderThickness="0"
                             VirtualizingPanel.IsVirtualizing="True"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Bd" Padding="10,8" Margin="2,1" CornerRadius="6"
                                                    Background="Transparent" Cursor="Hand">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Ellipse Width="8" Height="8" Fill="{StaticResource TextSecondaryBrush}"
                                                             Margin="0,0,10,0" VerticalAlignment="Center"/>
                                                    <StackPanel Grid.Column="1" MinWidth="0">
                                                        <TextBlock Text="{Binding DisplayName}"
                                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                                   FontWeight="Medium" FontSize="13" TextTrimming="CharacterEllipsis"/>
                                                        <TextBlock Text="{Binding Host}"
                                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                                   FontSize="11" TextTrimming="CharacterEllipsis"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#27272A"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#1F1F23"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </DockPanel>
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1">
            <!-- Empty State -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                        Visibility="{Binding SelectedServer, Converter={StaticResource NullToVisibility}, ConverterParameter=inverse}">
                <Border Width="64" Height="64" Background="#27272A" CornerRadius="32" Margin="0,0,0,12">
                    <TextBlock Text="&#xE99A;" FontFamily="Segoe MDL2 Assets" FontSize="28"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="Select a server" FontSize="18" FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                <TextBlock Text="Choose a server from the sidebar"
                           Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center" Margin="0,6,0,0"/>
            </StackPanel>

            <!-- Server Details -->
            <DockPanel Visibility="{Binding SelectedServer, Converter={StaticResource NullToVisibility}}">
                <!-- Header -->
                <Border DockPanel.Dock="Top" Background="#18181B" BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1" Padding="20,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel VerticalAlignment="Center" MinWidth="0">
                            <TextBlock Text="{Binding SelectedServer.DisplayName}" FontSize="18" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}" TextTrimming="CharacterEllipsis"/>
                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                <TextBlock Foreground="{StaticResource TextSecondaryBrush}" FontSize="12">
                                    <Run Text="{Binding SelectedServer.Host, Mode=OneWay}"/>:<Run Text="{Binding SelectedServer.Port, Mode=OneWay}"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <Border Padding="10,5" CornerRadius="12" Margin="0,0,10,0"
                                    Background="{Binding ConnectionStatus, Converter={StaticResource StatusToColor}, ConverterParameter=bg}">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="6" Height="6"
                                             Fill="{Binding ConnectionStatus, Converter={StaticResource StatusToColor}}"
                                             Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding ConnectionStatus}"
                                               Foreground="{Binding ConnectionStatus, Converter={StaticResource StatusToColor}}"
                                               FontSize="11" FontWeight="Medium"/>
                                </StackPanel>
                            </Border>

                            <Button Style="{StaticResource SecondaryButton}" Command="{Binding EditServerCommand}"
                                    ToolTip="Edit" Padding="8" Margin="0,0,6,0">
                                <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                            </Button>

                            <Button Style="{StaticResource PrimaryButton}" Command="{Binding ConnectCommand}"
                                    Content="{Binding ConnectionStatus, Converter={StaticResource StatusToColor}, ConverterParameter=button}"
                                    IsEnabled="{Binding IsLoading, Converter={StaticResource BoolToVisibility}, ConverterParameter=inverse-bool}"
                                    MinWidth="90" Padding="12,8"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Tabs -->
                <TabControl Background="Transparent" BorderThickness="0" Padding="0"
                            SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border x:Name="Bd" Padding="14,10" Cursor="Hand">
                                            <ContentPresenter ContentSource="Header"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                                <Setter TargetName="Bd" Property="BorderThickness" Value="0,0,0,2"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TabControl.Resources>

                    <!-- Stats Tab -->
                    <TabItem Header="Stats">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="20">
                            <StackPanel MaxWidth="900">
                                <!-- System Info -->
                                <Border Background="#27272A" CornerRadius="10" Padding="16" Margin="0,0,0,12">
                                    <StackPanel>
                                        <TextBlock Text="System Information" FontSize="14" FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                                        <UniformGrid Rows="1" Columns="4">
                                            <StackPanel Margin="0,0,8,0">
                                                <TextBlock Text="HOSTNAME" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding CurrentStats.Hostname, FallbackValue=N/A}"
                                                           Foreground="{StaticResource TextPrimaryBrush}" FontSize="12" FontWeight="Medium"
                                                           Margin="0,3,0,0" TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                            <StackPanel Margin="8,0">
                                                <TextBlock Text="OS" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding CurrentStats.Os, FallbackValue=N/A}"
                                                           Foreground="{StaticResource TextPrimaryBrush}" FontSize="12" FontWeight="Medium"
                                                           Margin="0,3,0,0" TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                            <StackPanel Margin="8,0">
                                                <TextBlock Text="KERNEL" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding CurrentStats.Kernel, FallbackValue=N/A}"
                                                           Foreground="{StaticResource TextPrimaryBrush}" FontSize="12" FontWeight="Medium"
                                                           Margin="0,3,0,0" TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                            <StackPanel Margin="8,0,0,0">
                                                <TextBlock Text="UPTIME" FontSize="9" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding CurrentStats.Uptime, FallbackValue=N/A}"
                                                           Foreground="{StaticResource TextPrimaryBrush}" FontSize="12" FontWeight="Medium"
                                                           Margin="0,3,0,0" TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </UniformGrid>
                                    </StackPanel>
                                </Border>

                                <!-- Resource Cards -->
                                <UniformGrid Rows="1" Columns="3" Margin="0,0,0,12">
                                    <!-- CPU -->
                                    <Border Background="#27272A" CornerRadius="10" Padding="16" Margin="0,0,6,0">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                                <Border Width="36" Height="36" Background="#3B82F620" CornerRadius="8">
                                                    <TextBlock Text="&#xE950;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                                               Foreground="{StaticResource PrimaryBrush}"
                                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                                    <TextBlock Text="CPU" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                                                    <TextBlock Text="{Binding CurrentStats.CpuCores, StringFormat={}{0} cores, FallbackValue=-}"
                                                               Foreground="{StaticResource TextSecondaryBrush}" FontSize="10"/>
                                                </StackPanel>
                                            </StackPanel>
                                            <TextBlock Text="{Binding CurrentStats.CpuPercent, StringFormat={}{0:F1}%, FallbackValue=0%}"
                                                       FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <Border Height="6" CornerRadius="3" Background="#3E3E42" Margin="0,10,0,0">
                                                <Border Background="{StaticResource PrimaryBrush}" CornerRadius="3" HorizontalAlignment="Left"
                                                        Width="{Binding CurrentStats.CpuPercent, Converter={StaticResource BytesToString}, ConverterParameter=percent}"/>
                                            </Border>
                                        </StackPanel>
                                    </Border>

                                    <!-- Memory -->
                                    <Border Background="#27272A" CornerRadius="10" Padding="16" Margin="6,0">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                                <Border Width="36" Height="36" Background="#22C55E20" CornerRadius="8">
                                                    <TextBlock Text="&#xE964;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                                               Foreground="{StaticResource SuccessBrush}"
                                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                                    <TextBlock Text="Memory" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                                                    <TextBlock Text="{Binding CurrentStats.MemoryTotal, Converter={StaticResource BytesToString}, FallbackValue=-}"
                                                               Foreground="{StaticResource TextSecondaryBrush}" FontSize="10"/>
                                                </StackPanel>
                                            </StackPanel>
                                            <TextBlock Text="{Binding CurrentStats.MemoryPercent, StringFormat={}{0:F1}%, FallbackValue=0%}"
                                                       FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <Border Height="6" CornerRadius="3" Background="#3E3E42" Margin="0,10,0,0">
                                                <Border Background="{StaticResource SuccessBrush}" CornerRadius="3" HorizontalAlignment="Left"
                                                        Width="{Binding CurrentStats.MemoryPercent, Converter={StaticResource BytesToString}, ConverterParameter=percent}"/>
                                            </Border>
                                        </StackPanel>
                                    </Border>

                                    <!-- Disk -->
                                    <Border Background="#27272A" CornerRadius="10" Padding="16" Margin="6,0,0,0">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                                <Border Width="36" Height="36" Background="#A855F720" CornerRadius="8">
                                                    <TextBlock Text="&#xEDA2;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                                               Foreground="#A855F7"
                                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                                    <TextBlock Text="Disk" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                                                    <TextBlock Text="{Binding CurrentStats.DiskTotal, Converter={StaticResource BytesToString}, FallbackValue=-}"
                                                               Foreground="{StaticResource TextSecondaryBrush}" FontSize="10"/>
                                                </StackPanel>
                                            </StackPanel>
                                            <TextBlock Text="{Binding CurrentStats.DiskPercent, StringFormat={}{0:F1}%, FallbackValue=0%}"
                                                       FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <Border Height="6" CornerRadius="3" Background="#3E3E42" Margin="0,10,0,0">
                                                <Border Background="#A855F7" CornerRadius="3" HorizontalAlignment="Left"
                                                        Width="{Binding CurrentStats.DiskPercent, Converter={StaticResource BytesToString}, ConverterParameter=percent}"/>
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                </UniformGrid>

                                <Button Style="{StaticResource SecondaryButton}" Command="{Binding RefreshStatsCommand}"
                                        HorizontalAlignment="Right" Padding="12,8">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="11" VerticalAlignment="Center"/>
                                        <TextBlock Text="Refresh" Margin="6,0,0,0" FontSize="12"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <!-- Terminal Tab -->
                    <TabItem Header="Terminal">
                        <Grid>
                            <controls:TerminalControl x:Name="Terminal"/>

                            <!-- Connection overlay -->
                            <Border Background="#0D0D0D"
                                    Visibility="{Binding IsTerminalConnected, Converter={StaticResource BoolToVisibility}, ConverterParameter=inverse}">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Border Width="48" Height="48" Background="#27272A" CornerRadius="24" Margin="0,0,0,12">
                                        <TextBlock Text="&#xE756;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Terminal" FontSize="16" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Connect to the server to start a shell session"
                                               Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center" Margin="0,6,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </TabItem>

                    <!-- Files Tab -->
                    <TabItem Header="Files">
                        <DockPanel>
                            <!-- Toolbar -->
                            <Border DockPanel.Dock="Top" Background="#18181B" Padding="12,8"
                                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Navigation -->
                                    <StackPanel Orientation="Horizontal">
                                        <Button Style="{StaticResource SecondaryButton}" Command="{Binding GoUpCommand}"
                                                Padding="8,6" Margin="0,0,6,0" ToolTip="Go up">
                                            <TextBlock Text="&#xE74A;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                                        </Button>
                                        <Button Style="{StaticResource SecondaryButton}" Command="{Binding RefreshFilesCommand}"
                                                Padding="8,6" ToolTip="Refresh">
                                            <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                                        </Button>
                                    </StackPanel>

                                    <!-- Path -->
                                    <Border Grid.Column="1" Background="#27272A" CornerRadius="4" Padding="10,6" Margin="10,0">
                                        <TextBlock Text="{Binding CurrentPath}" Foreground="{StaticResource TextPrimaryBrush}"
                                                   FontFamily="Consolas" FontSize="12" TextTrimming="CharacterEllipsis"/>
                                    </Border>

                                    <!-- Actions -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <Button Style="{StaticResource SecondaryButton}" Command="{Binding OpenTerminalHereCommand}"
                                                Padding="8,6" Margin="0,0,6,0" ToolTip="Open terminal here">
                                            <TextBlock Text="&#xE756;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                                        </Button>
                                        <Button Style="{StaticResource SecondaryButton}" Command="{Binding OpenInVSCodeCommand}"
                                                Padding="8,6" Margin="0,0,6,0" ToolTip="Open in VS Code (server)">
                                            <TextBlock Text="&#xE943;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                                        </Button>
                                        <Button Style="{StaticResource SecondaryButton}" Command="{Binding UploadFileCommand}"
                                                Padding="8,6" Margin="0,0,6,0" ToolTip="Upload file">
                                            <TextBlock Text="&#xE898;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                                        </Button>
                                        <Button Style="{StaticResource SecondaryButton}" Command="{Binding DownloadFileCommand}"
                                                Padding="8,6" Margin="0,0,6,0" ToolTip="Download">
                                            <TextBlock Text="&#xE896;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                                        </Button>
                                        <Button Style="{StaticResource SecondaryButton}" Command="{Binding EditFileCommand}"
                                                Padding="8,6" Margin="0,0,6,0" ToolTip="Edit file">
                                            <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                                        </Button>
                                        <Button Style="{StaticResource SecondaryButton}" Command="{Binding RenameFileCommand}"
                                                Padding="8,6" Margin="0,0,6,0" ToolTip="Rename">
                                            <TextBlock Text="&#xE8AC;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                                        </Button>
                                        <Button Style="{StaticResource SecondaryButton}" Command="{Binding ChangePermissionsCommand}"
                                                Padding="8,6" Margin="0,0,6,0" ToolTip="Permissions">
                                            <TextBlock Text="&#xE8D7;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                                        </Button>
                                        <Button Style="{StaticResource SecondaryButton}" Command="{Binding CreateFolderCommand}"
                                                Padding="8,6" Margin="0,0,6,0" ToolTip="New folder">
                                            <TextBlock Text="&#xE8F4;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                                        </Button>
                                        <Button Style="{StaticResource DangerButton}" Command="{Binding DeleteFileCommand}"
                                                Padding="8,6" ToolTip="Delete">
                                            <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- File List -->
                            <ListBox ItemsSource="{Binding Files}"
                                     SelectedItem="{Binding SelectedFile}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     VirtualizingPanel.IsVirtualizing="True">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <Border x:Name="Bd" Padding="12,8" Background="Transparent" Cursor="Hand"
                                                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                                                        <ContentPresenter/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="Bd" Property="Background" Value="#27272A"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="Bd" Property="Background" Value="#1F1F23"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <EventSetter Event="MouseDoubleClick" Handler="FileItem_DoubleClick"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="80"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding Icon}" FontFamily="{Binding IconFont}"
                                                       FontSize="16" Foreground="{Binding IconColor}"
                                                       VerticalAlignment="Center" Margin="0,0,10,0"/>

                                            <TextBlock Grid.Column="1" Text="{Binding Name}"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       FontSize="13" VerticalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"/>

                                            <TextBlock Grid.Column="2" Text="{Binding Permissions}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       FontFamily="Consolas" FontSize="11"
                                                       VerticalAlignment="Center" Margin="10,0"/>

                                            <TextBlock Grid.Column="3" Text="{Binding SizeDisplay}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       FontSize="11" VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </DockPanel>
                    </TabItem>

                    <!-- Actions Tab -->
                    <TabItem Header="Actions">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="20">
                            <StackPanel MaxWidth="700">
                                <Border Background="#27272A" CornerRadius="10" Padding="16" Margin="0,0,0,12">
                                    <StackPanel>
                                        <TextBlock Text="Server Controls" FontSize="14" FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>

                                        <UniformGrid Rows="1" Columns="2">
                                            <!-- Reboot -->
                                            <Border Background="#18181B" CornerRadius="8" Padding="14" Margin="0,0,6,0">
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                                        <Border Width="36" Height="36" Background="#EAB30820" CornerRadius="8">
                                                            <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                                                       Foreground="{StaticResource WarningBrush}"
                                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                                            <TextBlock Text="Reboot" Foreground="{StaticResource TextPrimaryBrush}" FontWeight="Medium" FontSize="13"/>
                                                            <TextBlock Text="Restart server" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                    <Button Content="Reboot" Command="{Binding RebootServerCommand}"
                                                            Background="{StaticResource WarningBrush}" Foreground="#18181B"
                                                            FontWeight="SemiBold" Padding="14,8" BorderThickness="0" Cursor="Hand" FontSize="12">
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>
                                                </StackPanel>
                                            </Border>

                                            <!-- Shutdown -->
                                            <Border Background="#18181B" CornerRadius="8" Padding="14" Margin="6,0,0,0">
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                                        <Border Width="36" Height="36" Background="#EF444420" CornerRadius="8">
                                                            <TextBlock Text="&#xE7E8;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                                                       Foreground="{StaticResource DangerBrush}"
                                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                                            <TextBlock Text="Shutdown" Foreground="{StaticResource TextPrimaryBrush}" FontWeight="Medium" FontSize="13"/>
                                                            <TextBlock Text="Turn off server" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                    <Button Style="{StaticResource DangerButton}" Content="Shutdown"
                                                            Command="{Binding ShutdownServerCommand}" Padding="14,8" FontSize="12"/>
                                                </StackPanel>
                                            </Border>
                                        </UniformGrid>
                                    </StackPanel>
                                </Border>

                                <!-- Delete -->
                                <Border Background="#27272A" CornerRadius="10" Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="Danger Zone" FontSize="14" FontWeight="SemiBold"
                                                   Foreground="{StaticResource DangerBrush}" Margin="0,0,0,8"/>
                                        <TextBlock Text="Permanently delete this server. This cannot be undone."
                                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,12"/>
                                        <Button Style="{StaticResource DangerButton}" Content="Delete Server"
                                                Command="{Binding DeleteServerCommand}" HorizontalAlignment="Left" Padding="14,8" FontSize="12"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </DockPanel>
        </Grid>
        </Grid>
    </Grid>
</Window>
